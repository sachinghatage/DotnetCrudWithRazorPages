@page
@model MyStore.Pages.Clients.IndexModel
@{
}

<br />
<h2>List of Clients</h2>
<a class="btn btn-primary btn-sm" href='/Clients/Create'>New Client</a>
<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Email</th>
            <th>CreatedTime</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model.listClients)
        {
            <tr>
                <td>@item.id</td>
                <td>@item.name</td>
                <td>@item.email</td>
                <td>@item.createdTime</td>
                <td>
                    <a class="btn btn-primary btn-sm" herf="/Clients/Edit?id=@item.id">Edit</a>
                    <a class="btn btn-outline-primary btn-sm" href="/Clients/Delete?id=@item.id">Delete</a>
                </td>

            </tr>
        }
    </tbody>
</table>
