@page
@model UserApplication.Pages.User.IndexModel
@{
}

<a href="/User/Create" class="btn btn-primary">Create</a>
<br />
<table class="table table-hover">
    <thead>
       <tr>
           <td>Id</td>
           <td>First Name</td>
            <td>Last Name</td>
            <td>Email Id</td>
            <td>Edit</td>
            <td>Delete</td>
       </tr>
    </thead>
    <tbody>
        @{
            foreach(var item in Model.listUsers)
            {
                            <tr>
                            <td>@item.Id</td>
                            <td>@item.FirstName</td>
                            <td>@item.LastName</td>
                            <td>@item.Email</td>
                            <td>
                            <a href="/User/Edit?id=@item.Id" class="btn btn-primary">Edit</a>
                            </td>
                            <td>
                            <a onclick="return onDelete(@item.Id)" class="btn btn-danger">Delete</a>
                            </td>
                            </tr>
            }
        }
    </tbody>

</table>

<script>
    function onDelete(id) {
        if (window.confirm("The item might get deleted permanantly")) {
            window.location.href = "/User/Delete?id=" + id;
        }
    }
</script>
