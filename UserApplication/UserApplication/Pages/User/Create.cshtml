@page
@model UserApplication.Pages.User.CreateModel
@{
}

<h2>Add User</h2>

@if (Model.failureMessage.Length > 0)
{
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
        <strong>@Model.failureMessage</strong>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="close"></button>
    </div>
}

@if (Model.successMessage.Length > 0)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <strong>@Model.successMessage</strong>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="close"></button>
    </div>
}

<form method="post">
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">First Name</label>
        <div class="col-sm-3">
            <input type="text" class="form-control" name="FirstName" value="@Model.users.FirstName" />
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Last Name</label>
        <div class="col-sm-3">
            <input type="text" class="form-control" name="LastName" value="@Model.users.LastName" />
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Email Id</label>
        <div class="col-sm-3">
            <input type="text" class="form-control" name="Email" value="@Model.users.Email" />
        </div>
    </div>
    <div class="row mb-3">
        <div class="offset-sm-3" col-sm-6 g-grid>
            <button type="submit" class="btn btn-primary">Submit</button> &nbsp
            <button type="submit" class="btn btn-danger">Cancel</button>
            
        </div>
    </div>
</form>
